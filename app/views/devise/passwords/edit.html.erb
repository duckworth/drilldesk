<section class="bg-gray-50 dark:bg-gray-900">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <a href="/" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
      <%= render "shared/logo" %>
    </a>
    <div
      class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <% content_for :custom_flash_rendered do %>
          <!-- Flag that flash has been rendered in custom location-->
        <% end %>
        <%= render "shared/flash" %>
        <h1
          class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
          Change your password
        </h1>
        <%= form_with(model: resource, url: password_path(resource_name), method: :put, local: true) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password", class: "w-full rounded-lg border-gray-300 focus:border-primary-600 focus:ring-primary-600 dark:border-gray-600 dark:bg-gray-700 dark:text-white sm:text-sm" %>
            <% if @minimum_password_length %>
              <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              </p>
            <% end %>
          </div>

          <div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password", class: "w-full rounded-lg border-gray-300 focus:border-primary-600 focus:ring-primary-600 dark:border-gray-600 dark:bg-gray-700 dark:text-white sm:text-sm" %>
          </div>

          <%= f.submit "Change my password", class: "w-full btn btn-primary" %>
        <% end %>
        <p class="text-sm font-light text-gray-500 dark:text-gray-400">
          <%= render "devise/shared/links" %>
        </p>
      </div>
    </div>
  </div>
</section>