<section class="bg-gray-50 dark:bg-gray-900">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <a href="/" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
      <%= render "shared/logo" %>
    </a>
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <% content_for :custom_flash_rendered do %>
        <% end %>
        <%= render "shared/flash" %>
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
          Create your account
        </h1>
        <%= form_with(model: resource, url: registration_path(resource_name), local: true) do |f| %>
          <div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@company.com", required: true %>
          </div>
          <div>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••", required: true %>
            <% if @minimum_password_length %>
              <p class="text-sm text-gray-500 dark:text-gray-400">Minimum <%= @minimum_password_length %> characters required.</p>
            <% end %>
          </div>
          <div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", required: true %>
          </div>
          <%= f.submit "Sign up", class: "w-full btn btn-primary" %>
          <p class="text-sm font-light text-gray-500 dark:text-gray-400">
            <%= render "devise/shared/links" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</section>