		<div class="form-group">
				<%= form.text_field :exercise_type_id %>
		</div>

		<div class="form-group">
				<%= form.text_field :starting_scenario_event_id %>
		</div>

		<div class="actions">
	    <%= form.submit class: 'btn btn-primary' %>
	  </div>
	</div>
<% end %>
