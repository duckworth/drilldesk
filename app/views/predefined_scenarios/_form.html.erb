<%= form_with(model: predefined_scenario) do |form| %>
	<div class="form-container">
		<% if predefined_scenario.errors.any? %>
		<div class="error-messages">
			<h2><%= pluralize(predefined_scenario.errors.count, "error") %> prohibited this predefined_scenario
				from being saved:</h2>

			<ul>
				<% predefined_scenario.errors.each do |error| %>
				<li><%= error.full_message %></li>
				<% end %>
			</ul>
		</div>
		<% end %>

		<div class="form-group">
				<%= form.text_field :name %>
		</div>

		<div class="form-group">
