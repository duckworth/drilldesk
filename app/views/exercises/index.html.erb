<% content_for :title, "Exercises" %>

<h1 class="page-heading">Exercises</h1>

<div class="items-list" id="exercises">
  <% @exercises.each do |exercise| %>
    <div class="item-container">
    <%= render exercise %>
    <div class="item-actions">
      <%= link_to "Show this exercise", exercise, class: 'link' %>
    </div>
  </div>
  <% end %>
</div>
<div class="pagination">
  <%== pagy_nav(@pagy) %>
</div>
<div class="actions">
  <%= link_to "New exercise", new_exercise_path, class: 'btn btn-primary' %>
</div>