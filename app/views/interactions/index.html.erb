<% content_for :title, "Interactions" %>

<h1 class="page-heading">Interactions</h1>

<div class="items-list" id="interactions">
  <% @interactions.each do |interaction| %>
    <div class="item-container">
    <%= render interaction %>
    <div class="item-actions">
      <%= link_to "Show this interaction", interaction, class: 'link' %>
    </div>
  </div>
  <% end %>
</div>
<div class="pagination">
  <%== pagy_nav(@pagy) %>
</div>
<div class="actions">
  <%= link_to "New interaction", new_interaction_path, class: 'btn btn-primary' %>
</div>